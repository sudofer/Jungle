  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
         <%@order.line_items.each do |i| %>
          <%=render "line_item", line_item: i, order: @order %>
        <%end%> 
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL: 
          </th>
          <th>
          <%= humanized_money_with_symbol @order.total %> 
          </th>
        </tr>
      </tfoot>
    </table>
  </div>