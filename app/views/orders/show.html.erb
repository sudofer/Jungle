<section class="orders-show">
  <header class="page-header">
    <h1>Order #<%= @order.id %> for <%=
    @order.email%></h1>
  </header>

  <%@order.line_items.each do |i| %>
  <%=render "line_item", line_item: i, order: @order %>
  <%end%> 


  <div class="order-summary jumbotron">
    <h4>Thank you for your order! Your total is <%=  humanized_money_with_symbol @order.total_cents %></h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
